@*Changes made here*@
@model IEnumerable<SmartHome.Models.SmartDevice.SmartDevice>

@{
    ViewData["Title"] = "Index";
}



<center>
    <h2>Devices</h2>
    <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("SelectType","")'">Create</button>
</center>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeviceID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeviceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.timestamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@if (Model == null)
    {
        <span>no items found</span>
}
else
{

    @foreach (var item in Model)
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeviceID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeviceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.timestamp)
            </th>

            <td>
                @Html.ActionLink("AbstractDevice", "Edit", new { id = item.DeviceID }) |
                @Html.ActionLink("AbstractDevice", "Delete", new { id = item.DeviceID })
            </td>
        </tr>
    }
}
    </tbody>
</table>


